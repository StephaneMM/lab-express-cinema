<h1>Welcome to {{title}}</h1>
<h1>view all movies</h1>
<main class="movies-container"> {{!-- to "flexboxed" align item, wrap --}}
    {{#each movies}}
    <div class="movie-div">
        <div class="img">
            <img src="{{this.image}}" alt="{{this}} picture">
        </div>

        <p>
            <strong>{{this.title}}</strong>
        </p>

        <p>
            <a href="/movies/{{this._id}}">see more...</a>  /   
            <a href="/movies/delete/{{this._id}}">delete</a>
        </p>

    </div>   
    {{/each}}
</main>